        max-width: 95vw;
    }

    .retrospective-screen {
        padding: 20px clamp(15px, 4vw, 20px);
    }

    .retrospective-music-control-button,
    .retrospective-final-close-x-btn {
        top: 10px;
        width: 32px;
        height: 32px;
        font-size: 16px;
    }

    .retrospective-music-control-button {
        left: 10px;
    }

    .retrospective-final-close-x-btn {
        right: 10px;
